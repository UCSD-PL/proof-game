  <!-- <button id="zoom-out" onclick="Game.zoom_out()">-</button> -->
  <span style="float:right;">
    You are: <%= current_user.username %> (<%= link_to "log out", "/session?delete=true", {method: :delete} %>) 
  </span>
</p>
